{
  "name": "@raz2/claude-api",
  "version": "1.0.0",
  "description": "Claude API integration with tool calls",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
