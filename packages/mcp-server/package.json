{
  "name": "@raz2/mcp-server",
  "version": "1.0.0",
  "description": "MCP server with basic tools",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "mcp-server": "./dist/index.js"
  },
  "scripts": {
    "build": "bun run clean && bun build --target=node --outdir=dist src/index.ts",
    "dev": "bun --hot src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@raz2/shared": "workspace:*",
    "@modelcontextprotocol/sdk": "^0.4.0",
    "zod": "^3.22.4",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
} 