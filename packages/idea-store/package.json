{
  "name": "@raz2/idea-store",
  "version": "1.0.0",
  "description": "Idea storage and retrieval with reminders using PostgreSQL with pgvector extension",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "bun run clean && bun build --target=node --outdir=dist src/index.ts",
    "dev": "bun run --watch src/index.ts",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@raz2/shared": "workspace:*",
    "drizzle-orm": "^0.36.4",
    "postgres": "^3.4.5",
    "pgvector": "^0.2.0",
    "openai": "^4.67.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.10",
    "drizzle-kit": "^0.30.0",
    "typescript": "^5.7.2"
  },
  "keywords": ["postgresql", "pgvector", "vector-search", "ideas", "reminders", "embeddings"],
  "author": "raz2",
  "license": "MIT"
} 